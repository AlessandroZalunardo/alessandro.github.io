// Lab 2: 
//Part A
Start
    declare string foodname
    declare real  fatGrams
    declare real  numOfServings
    declare real  totalFatCalories
    declare real  fatCaloriesPerServing

    const caloriesPerGram = 9

    display "Enter the food name:"
    input foodname

    display "enterfatgrams:"
    fatGrams = 275
    //input fatGrams for user to type it but we know its 275 from lab instruction

    display "numofservings:"
    input numOfServings
    totalFatCalories = fatGrams * caloriesPerGram
    fatCaloriesPerServing = totalFatCalories / numOfServings

    output "Total fat calories in ", foodname, ": ", totalFatCalories
    output "Fat calories per serving in ", foodname, ": ", fatCaloriesPerServing


End


